                explanation: "טבלת צילוב משמשת להצגת הקשר בין שני משתנים קטגוריאליים (שמיים או סדרים), על ידי הצגת השכיחויות המשותפות של צירופי הקטגוריות",
                topic: "קשר בין משתנים",
                difficulty: "בינוני"
            },
            {
                id: 'q9_6',
                question: "מה מצביע מקדם פירסון השווה ל-0",
                options: [
                    "קשר חיובי מושלם",
                    "קשר שלילי מושלם",
                    "אין קשר ליניארי בין המשתנים",
                    "קשר חזק מאוד"
                ],
                correctAnswer: 2,
                explanation: "מקדם פירסון השווה ל-0 מצביע על כך שאין קשר ליניארי בין שני המשתנים. ייתכן שקיים קשר לא ליניארי",
                topic: "קשר בין משתנים",
                difficulty: "בינוני"
            },
            {
                id: 'q9_7',
                question: "איזה מבין הבאים אינו מאפיין של קשר סטטיסטי",
                options: [
                    "כיוון",
                    "עוצמה",
                    "צורה",
                    "מובהקות"
                ],
                correctAnswer: 3,
                explanation: "מובהקות היא היבט של בדיקת השערות, לא מאפיין ישיר של הקשר הסטטיסטי עצמו (כמו כיוון, עוצמה וצורה)",
                topic: "קשר בין משתנים",
                difficulty: "קשה"
            },
            {
                id: 'q9_8',
                question: "דיאגרמת פיזור מציגה נקודות המתפזרות בצורה אקראית ללא כל דפוס. מה ניתן להסיק מכך",
                options: [
                    "קיים קשר חיובי חזק",
                    "קיים קשר שלילי חזק",
                    "אין קשר ליניארי ברור",
                    "קיים קשר לא ליניארי חזק"
                ],
                correctAnswer: 2,
                explanation: "פיזור אקראי של נקודות בדיאגרמת פיזור מצביע על היעדר קשר ליניארי ברור בין המשתנים",
                topic: "קשר בין משתנים",
                difficulty: "קל"
            },
            {
                id: 'q9_9',
                question: "מקדם פירסון מתאים למדידת קשר בין אילו סוגי משתנים",
                options: [
                    "שני משתנים איכותיים",
                    "שני משתנים סדרים",
                    "שני משתנים כמותיים",
                    "משתנה איכותי ומשתנה כמותי"
                ],
                correctAnswer: 2,
                explanation: "מקדם פירסון (r) משמש למדידת עוצמת וכיוון הקשר הליניארי בין שני משתנים כמותיים (רווח או מנה)",
                topic: "קשר בין משתנים",
                difficulty: "בינוני"
            }
        ];

        // אלמנטים מה-DOM
        const quizScreen = document.getElementById('quiz-screen');
        const resultsScreen = document.getElementById('results-screen');
        const questionDisplay = document.getElementById('question-display');
        const difficultyDisplay = document.getElementById('difficulty-display'); // אלמנט להצגת רמת קושי
        const optionsContainer = document.getElementById('options-container');
        const feedbackDisplay = document.getElementById('feedback-display');
        const nextButton = document.getElementById('next-button');
        const replaceButton = document.getElementById('replace-button'); // כפתור החלף שאלה
        const progressDisplay = document.getElementById('progress-display');
        const finalScoreDisplay = document.getElementById('final-score');
        const restartButton = document.getElementById('restart-button');
        const learningMeterFill = document.getElementById('learning-meter-fill');
        const learningMeterText = document.getElementById('learning-meter-text');
        const finalLearningMeterText = document.getElementById('final-learning-meter-text');

        let selectedQuestions = []; // מערך שיכיל את 20 השאלות שנבחרו למבחן הנוכחי
        let currentQuestionIndex = 0; // אינדקס השאלה הנוכחית במבחן
        let score = 0; // הציון הנוכחי של המשתמש
        let answeredCurrentQuestion = false; // דגל לוודא שהמשתמש ענה על השאלה הנוכחית לפני המעבר הבא
        let correctlyAnsweredUniqueQuestions = new Set(); // סט לאחסון מזהי שאלות ייחודיות שענו עליהן נכון

        // פונקציה לניקוי נקודות בסוף השאלות
        function cleanQuestionText() {
            allQuestions.forEach(q => {
                // בדיקה והסרה של נקודה בסוף השאלה
                if (q.question.endsWith('.')) {
                    q.question = q.question.slice(0, -1);
                }
                // בדיקה והסרה של נקודה בסוף ההסבר
                if (q.explanation.endsWith('.')) {
                    q.explanation = q.explanation.slice(0, -1);
                }
            });
        }

        // פונקציה לבחירת 20 שאלות אקראיות מתוך המאגר
        function selectRandomQuestions() {
            // מערבבים את כל השאלות
            const shuffled = [...allQuestions].sort(() => 0.5 - Math.random());
            // בוחרים את 20 הראשונות
            selectedQuestions = shuffled.slice(0, 20);
        }

        // פונקציה לעדכון מד הלמידה
        function updateLearningMeter() {
            const totalUniqueQuestions = allQuestions.length;
            const answeredCorrectlyCount = correctlyAnsweredUniqueQuestions.size;
            const percentage = (answeredCorrectlyCount / totalUniqueQuestions) * 100;
            learningMeterFill.style.width = `${percentage.toFixed(0)}%`;
            learningMeterText.textContent = `מד למידה: ${percentage.toFixed(0)}% (${answeredCorrectlyCount}/${totalUniqueQuestions})`;
        }

        // פונקציה להצגת השאלה הנוכחית
        function displayQuestion() {
            quizScreen.classList.remove('hidden');
            resultsScreen.classList.add('hidden');
            feedbackDisplay.classList.add('hidden');
            nextButton.classList.add('hidden');
            replaceButton.disabled = false; // מפעיל את כפתור ההחלפה
            answeredCurrentQuestion = false; // איפוס דגל התשובה

            const question = selectedQuestions[currentQuestionIndex];
            questionDisplay.textContent = question.question;
            difficultyDisplay.textContent = `קושי: ${question.difficulty}`; // הצגת רמת הקושי
            optionsContainer.innerHTML = ''; // ניקוי אפשרויות קודמות

            // עדכון תצוגת ההתקדמות
            progressDisplay.textContent = `שאלה ${currentQuestionIndex + 1} מתוך ${selectedQuestions.length}`;

            // יצירת כפתורים עבור כל אפשרות תשובה
            question.options.forEach((option, index) => {
                const button = document.createElement('button');
                button.textContent = option;
                button.classList.add('option-button');
                button.dataset.index = index; // שמירת האינדקס של האפשרות
                button.addEventListener('click', () => checkAnswer(index));
                optionsContainer.appendChild(button);
            });
        }

        // פונקציה לבדיקת התשובה שנבחרה
        function checkAnswer(selectedIndex) {
            if (answeredCurrentQuestion) return; // מונע לחיצות מרובות על כפתורי התשובה

            answeredCurrentQuestion = true;
            replaceButton.disabled = true; // מנטרל את כפתור ההחלפה לאחר בחירה
            const question = selectedQuestions[currentQuestionIndex];
            const optionButtons = optionsContainer.querySelectorAll('.option-button');

            // סימון הכפתורים כנכונים/שגויים
            optionButtons.forEach((button, index) => {
                button.disabled = true; // מנטרל את כל הכפתורים לאחר בחירה
                if (index === question.correctAnswer) {
                    button.classList.add('correct'); // מסמן את התשובה הנכונה
                } else if (index === selectedIndex) {
                    button.classList.add('incorrect'); // מסמן את התשובה שנבחרה כשגויה
                }
            });

            // עדכון הציון ומשוב
            if (selectedIndex === question.correctAnswer) {
                score++;
                // הוספה למד הלמידה רק אם השאלה לא נענתה נכונה בעבר
                if (!correctlyAnsweredUniqueQuestions.has(question.id)) {
                    correctlyAnsweredUniqueQuestions.add(question.id);
                    updateLearningMeter(); // עדכון מד הלמידה
                }
                feedbackDisplay.innerHTML = `<strong>תשובה נכונה!</strong><br>${question.explanation}`;
            } else {
                feedbackDisplay.innerHTML = `<strong>תשובה שגויה.</strong> התשובה הנכונה הייתה: "${question.options[question.correctAnswer]}".<br>${question.explanation}`;
            }
            feedbackDisplay.classList.remove('hidden');
            nextButton.classList.remove('hidden'); // מציג את כפתור 'הבא'
        }

        // פונקציה למעבר לשאלה הבאה או להצגת התוצאות הסופיות
        function nextQuestion() {
            currentQuestionIndex++;
            if (currentQuestionIndex < selectedQuestions.length) {
                displayQuestion();
            } else {
                showResults();
            }
        }

        // חדש: פונקציה להחלפת השאלה הנוכחית
        function replaceCurrentQuestion() {
            if (answeredCurrentQuestion) return; // לא ניתן להחליף שאלה שכבר נענתה

            const currentQuestionId = selectedQuestions[currentQuestionIndex].id;
            let newQuestion = null;
            let attempts = 0;
            const maxAttempts = allQuestions.length * 5; 

            // מציאת שאלה חדשה שאינה נמצאת כבר ב-selectedQuestions
            while (newQuestion === null && attempts < maxAttempts) {
                const randomIndex = Math.floor(Math.random() * allQuestions.length);
                const potentialNewQuestion = allQuestions[randomIndex];

                // ודא שהשאלה החדשה אינה השאלה הנוכחית ואינה חלק מ-20 השאלות הנוכחיות
                const isAlreadyInSelected = selectedQuestions.some(q => q.id === potentialNewQuestion.id);

                if (!isAlreadyInSelected) {
                    newQuestion = potentialNewQuestion;
                }
                attempts++;
            }

            if (newQuestion) {
                selectedQuestions[currentQuestionIndex] = newQuestion; // החלפת השאלה במערך
                displayQuestion(); // הצגת השאלה החדשה
            } else {
                // המקרה הזה צריך לקרות רק אם יש פחות מ-20 שאלות במאגר, אבל זה מנגנון בטיחות
                feedbackDisplay.innerHTML = `<strong>אין שאלות נוספות ייחודיות להחלפה כרגע.</strong>`;
                feedbackDisplay.classList.remove('hidden');
            }
        }


        // פונקציה להצגת תוצאות המבחן הסופיות
        function showResults() {
            quizScreen.classList.add('hidden');
            resultsScreen.classList.remove('hidden');
            finalScoreDisplay.textContent = `קיבלת ${score} מתוך ${selectedQuestions.length} שאלות נכונות.`;
            finalLearningMeterText.textContent = `מד למידה כולל: ${correctlyAnsweredUniqueQuestions.size} מתוך ${allQuestions.length} שאלות ייחודיות (${((correctlyAnsweredUniqueQuestions.size / allQuestions.length) * 100).toFixed(0)}%)`;
        }

        // פונקציה לאתחול המבחן מחדש (מתחיל מבחן חדש ישירות)
        function initializeQuiz() {
            selectRandomQuestions(); // בוחר 20 שאלות חדשות
            currentQuestionIndex = 0;
            score = 0;
            displayQuestion(); // מציג את השאלה הראשונה
            updateLearningMeter(); // עדכון ראשוני של מד הלמידה
        }

        // אירועי לחיצה על כפתורים
        nextButton.addEventListener('click', nextQuestion);
        replaceButton.addEventListener('click', replaceCurrentQuestion); // חדש: אירוע לחיצה לכפתור החלף שאלה
        restartButton.addEventListener('click', initializeQuiz); // כעת מאתחל את המבחן מחדש ישירות

        // אתחול ראשוני: ניקוי טקסט השאלות והצגת מסך החידון
        document.addEventListener('DOMContentLoaded', () => {
            cleanQuestionText(); // ניקוי נקודות מהשאלות
            initializeQuiz(); // התחלת המבחן ישירות
        });
    </script>
</body>
